<div class="container">
  <div class="row justify-content-center">
    <h1>Burgers!</h1>
  </div>
  <div class="row justify-content-center">
    <div class="col-5">
      <h2>Burgers to eat:</h2>
      <ul>
        {{#each burgers}} {{#unless devoured}}
        <li class="p-2">
          {{burger_name}}
          <button class="devour btn" data-id="{{this.id}}">Devour!</button>
        </li>
        {{/unless}} {{/each}}
      </ul>
    </div>
    <div class="col-5">
      <h2>Ate these:</h2>
      <ul>
        {{#each burgers}} {{#if devoured}}
        <li class="p-2">
          {{this.burger_name}}
        </li>
        {{/if}} {{/each}}
      </ul>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-5">
      <h2>Add a Burger</h2>
      <form class="create-form">
        <div class="form-group">
          <label for="bg">Burger Name:</label>
          <input type="text" id="bg" name="burger_name">
        </div>
        <button type="submit btn">Add Burger</button>
      </form>
    </div>
  </div>
</div>